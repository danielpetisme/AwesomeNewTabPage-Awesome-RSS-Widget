{
  "name": "Awesome RSS Widget [ANTP]",
  "version": "0.1",
  "description": "Awesome RSS widget for Awesome New Tab Page. Resizable and multi-placeable. [ANTP]",
  
  "manifest_version": 2,
  
  "icons": {
    "128": "i128.png"
  },  
  "update_url": "http://clients2.google.com/service/update2/crx",
  
  "background": {
    "scripts": [
      "jquery.min.js",
      "common-rss.js",
      "background.js"      
    ]   
  },
  
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com/ajax/services/feed/load; object-src 'self'",
  "web_accessible_resources": [
    "widget-rss.html"
  ],
  "options_page": "widget-rss-options.html",

  "permissions": [ "*://*/"]  
  
}